{
    "compilerOptions": {
      "target": "es5",
      "lib": [
        "dom",
        "dom.iterable",
        "esnext"
      ],

    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
        {
          "name": "next"
        }
      ],
      "paths": {
        "@components/*": [
          "./src/components/*"
        ],
        "@cloud/*": [
          "./src/app/cloud/*"
        ],
        "@forms/*": [
          "./src/forms/*"
        ],
        "@blocks/*": [
          "./src/blocks/*"
        ],
        "@scss/*": [
          "./src/css/*"
        ],
        "@root/*": [
          "./src/*"
        ],
        "@providers": [
          "./src/providers"
        ],
